	var nowDate = new Date();
	if( (screenWidth < 1002 || screenWidth2<1002) && (cts_pushdownAD_M_time==""  || cts_pushdownAD_M_time==null  || ((Date.parse(cts_pushdownAD_M_time)).valueOf() < (Date.parse(nowDate)).valueOf()))){ /*如果是小於1002的尺寸，而且此類別廣告已看過在7分鐘以上*/
								 
		$("#pushdown_m_ad").load("http://news.cts.com.tw/inc/html/pushdown_ad_m.html");		localStorage.setItem("cts-pushdownad-m-news",new Date(nowDate.valueOf()+7*60*1000));
	}else if(screenWidth < 1002 || screenWidth2<1002){	
